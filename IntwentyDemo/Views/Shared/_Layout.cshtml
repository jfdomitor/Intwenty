
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Intwenty - @ViewData["Title"]</title>
    <meta name="google" content="notranslate" />
    <meta name="description" content="Intwenty - An open source metadata driven app engine built on .net core and vue.js" />
    <meta name="keywords" content="cms,blogg engine,open source" />
    <link rel="stylesheet" href="~/css/site.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-free-5.12.1-web/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/selectize.js/css/selectize.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/lib/Croppie/croppie.css" />
</head>

@{

    var currentpath = Context.Request.Path.ToUriComponent();
    var ishomepath = string.IsNullOrEmpty(currentpath) || currentpath.Length < 5 || currentpath.Contains("Home/Index");
    
}


<body class="@(ishomepath ? "landingpage" : "")">


    <div class="container" id="main_menu_container">
        @if (ishomepath)
        {
            <partial name="_CookieConsentPartial" />

        }

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="/">Intwenty</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">

                <ul class="nav navbar-nav mr-auto">

                    @if (User.Identity.IsAuthenticated)
                    {
                        @await Html.PartialAsync("_IntwentyAppMenu")

                        @if (User.IsInRole("SUPERADMIN") || User.IsInRole("SYSTEMADMIN"))
                        {
                            @await Html.PartialAsync("_IntwentyAdminMenu")
                        }

                        @if (User.IsInRole("SUPERADMIN") || User.IsInRole("USERADMIN"))
                        {
                            //IF NOT CENTRALIZED IAM DB, ALLOW USERADMIN TO IAM
                            @await Html.PartialAsync("_IntwentyIdentityAccessMenu")
                        }

                        @if (User.IsInRole("SUPERADMIN") || User.IsInRole("SYSTEMADMIN") || User.IsInRole("APIUSER"))
                        {
                            @await Html.PartialAsync("_IntwentyAPIMenu")
                        }
                    }



                </ul>
                <partial name="_LoginPartial" />
            </div>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a id="expand_ui_btn" class="nav-link" href="#"><span class="nav-label"><i class="fas fa-expand-arrows-alt fa-lg"></i></span></a>
                </li>
            </ul>


        </nav>

    </div>

    @if (ishomepath)
    {

       

        <div class="container-fluid">
            <div style="margin-top:300px;margin-left:100px; padding:10px;">
                <p style="color: white; font-size: 50px; text-align: left; margin-top: 10px">Intwenty</p>
                <p style="color: white; font-size: 35px; text-align: left; margin-top: 5px"><i class="fa fa-check-circle"></i> An open source metadata driven app engine built on .net core and vue.js</p>
                <p style="color: white; font-size: 35px; text-align: left; margin-top: 5px"><i class="fa fa-check-circle"></i> Built for dataintensive bussiness applications</p>
                <p style="color: white; font-size: 35px; text-align: left; margin-top: 5px"><i class="fa fa-check-circle"></i> Create applications with no code or low code</p>
                <p style="color: white; font-size: 35px; text-align: left; margin-top: 5px"><i class="fa fa-check-circle"></i> Supports MS Sql Server, Maria Db, My Sql, Postgres or SQLite</p>
                <p style="color: white; font-size: 35px; text-align: left; margin-top: 5px"><i class="fa fa-check-circle"></i> Takes care of regular tasks such as authentication, user admin etc</p>
                <p style="color: white; font-size: 35px; text-align: left; margin-top: 5px"><i class="fa fa-check-circle"></i> Available on <a href="https://www.nuget.org/packages/Intwenty/">nuget</a> and <a href="https://github.com/Domitor/Intwenty">github</a> (please star us)</p>
                <br />
                <br />
                <p style="color: white; font-size: 40px; text-align: left; margin-top: 5px"><i class="fa fa-check-circle"></i> Login <a href="https://intwenty.dev/Identity/Account/Login">here</a> to run a demo</p>
            </div>

        </div>

       


    }



    <div class="container body-content" id="main_content_container">


        @RenderBody()

        @if (!ishomepath)
        {
            <hr />
            <footer>
                <p>&copy; @Localizer["COPYRIGHT"]</p>
            </footer>
            <br />
            <br />
            <partial name="_CookieConsentPartial" />
        }

    </div>




    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/alasql/alasql.min.js"></script>
    <script src="~/lib/xlsx/xlsx.core.min.js"></script>
    <script src="~/lib/popper.js/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap-4.4.1/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/vue/vue.min.js"></script>
    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/lib/selectize.js/js/standalone/selectize.min.js"></script>
    <script src="~/js/intwenty.js" asp-append-version="true"></script>
    <script src="~/lib/Croppie/croppie.js"></script>

    <script>
        $(function () {

            $("#expand_ui_btn").on("click", function expandUI() {
                handleIntwentyViewMode(true);
            });

            handleIntwentyViewMode(false);
        });
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>
