@model Intwenty.Model.ViewModel
//ApplicationViewJSCustomMethods
        ,canShowUIControl: function (uiid, tablename, columnname)
        {
            return true;
        },
        isRequiredNotValid: function (uiid) 
        {
            return $("#" + uiid).hasClass("requiredNotValid");
        },
        onUserInput: function (event) 
        {
            if (!event)
                 return;

            var elementId = event.srcElement.id;
            if (!elementId)
                return;

            //Remove requiredNotValid if the input is valid
            $("[data-required]").each(function () {
                var required = $(this).data('required');
                var id = $(this).attr('id');
                if (required === "True" && id === elementId) 
                {
                    var val = event.srcElement.value;
                    if (val) 
                    {
                        if (val.length > 0)
                            $("#" + elementId).removeClass('requiredNotValid');
                    }
                }   
            });
        }


